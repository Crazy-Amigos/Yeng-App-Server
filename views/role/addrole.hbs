    <tr>
        <td></td>
        <td>Description</td>
        <td><input name="Discription" id="txtescription" type="text"></td>
        <td></td>
    </tr>
    </tbody>
</table>
<table class="table table-striped" >
    <thead>
    <tr>
        <th>Menu</th>
        <th>Full</th>
        <th>Modify</th>
        <th>Read Only</th>
    </tr>
    </thead>
    <tbody id="tblRole">
    <tr >
        <td>News and Updates</td>
        <td><input type="checkbox" name="SubNews" class="subject-News" value="2"></td>
        <td><input type="checkbox" name="SubNews" class="subject-News" value="1"></td>
        <td><input type="checkbox" name="SubNews" class="subject-News" value="0"></td>
    </tr>
    <tr class="roleRolw">
        <td>Admin Management</td>
        <td><input type="checkbox" name="SubAdmin" class="subject-admin" value="2"></td>
        <td><input type="checkbox" name="SubAdmin" class="subject-admin" value="1"></td>
        <td><input type="checkbox" name="SubAdmin" class="subject-admin" value="0"></td>
    </tr>
    <tr class="roleRolw">
        <td>Syllabus</td>
        <td><input type="checkbox" name="SubSyllabus" class="subject-syllabus" value="2"></td>
        <td><input type="checkbox" name="SubSyllabus" class="subject-syllabus" value="1"></td>
        <td><input type="checkbox" name="SubSyllabus" class="subject-syllabus" value="0"></td>
    </tr>
    <tr class="roleRolw">
        <td>Manage Role</td>
