<script>
    $('.subject-News').on('change', function() {
        $('.subject-News').not(this).prop('checked', false);
    });
    $('.subject-admin').on('change', function() {
        $('.subject-admin').not(this).prop('checked', false);
    });
    $('.subject-syllabus').on('change', function() {
        $('.subject-syllabus').not(this).prop('checked', false);
    });
    $('.subject-role').on('change', function() {
        $('.subject-role').not(this).prop('checked', false);
    });
</script>
